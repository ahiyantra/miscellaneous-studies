<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationExerciseSuite">
    <!-- Test for Firefox -->
    <test name="HomePageTests-Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
